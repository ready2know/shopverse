<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>

        <main>
            <h1>Welcome in our shop.</h1>

            <% if(hasProducts) {%>
                <div class="items-container">
                    <% for(let product of products){%>
                        <article class="item">
                            <header class="item-header">
                                <span>
                                    <%= product.title %>
                                </span>
                            </header>
                            <main class="item-content">
                                <div class="item-image"><img src="<%= product.imageURL%>" alt="<%= product.title %>"
                                        srcset="">
                                </div>
                                <div class="item-desc">
                                    <span>
                                        <%= product.description %>
                                    </span>
                                </div>
                            </main>
                            <footer class="item-footer">
                                <div class="item-price">
                                    $<%= product.price %>
                                </div>
                                <form action="/admin/delete-product" method="post">
                                    <a href="/admin/edit-product/<%= product._id %>">Edit</a>
                                    <input type="hidden" name="prodId" value="<%= product._id %>">
                                    <div class="item-buy"><button type="submit">Delete</button></div>
                                </form>
                            </footer>
                        </article>
                        <% } %>
                </div>
                <% } else { %>
                    Don't have products.
                    <% } %>
        </main>
</body>

</html>