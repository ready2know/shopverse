<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <form action="/admin/edit-product" method="post" class="form-add-product">
            <input type="hidden" name="prodId" value="<%= product._id %>">
            <label for="title">Product title</label>
            <input type="text" name="title" id="title"  placeholder="Insert title for this product..." value="<%= product.title %>">

            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="<%= product.price %>" min=0 step=0.01>

            <label for="image">Image link</label>
            <input type="text" name="imageURL" id="imageURL"  placeholder="Insert link to image for this product..."  value="<%= product.imageURL %>">

            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10" placeholder="Insert description for this product..."><%= product.description %></textarea>

            <button type="submit">Send</button>
        </form>
    </main>
</body>

</html>